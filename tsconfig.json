{
  "include": ["src/*.*"],
  "exclude": ["**/*.js", "dist/**", "types/**", "node_modules/**", "*.mjs"],
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "strict": false,
    "module": "ESNext",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "ES2015",
    "skipLibCheck": false,
    "skipDefaultLibCheck": false,
    "outDir": "dist",
    "declarationDir": "dist/types",
    "declaration": true
  }
}
